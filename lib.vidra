component("Button", label_text: String, color: Color = #FF0000, text_font: String = "Inter") {
    layer("bg") {
        solid(color)
        animation(opacity, from: 0, to: 1, duration: 1s, ease: linear)
    }
    layer("label") {
        text(label_text, font: text_font, size: 24, color: #FFFFFF)
        position(100, 50)
    }
}
