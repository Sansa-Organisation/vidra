{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "VidraScript",
    "scopeName": "source.vidra",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#durations"
        },
        {
            "include": "#colors"
        },
        {
            "include": "#properties"
        },
        {
            "include": "#functions"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "match": "//.*$",
                    "name": "comment.line.double-slash.vidra"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "\\b(if|else|let|export|import)\\b",
                    "name": "keyword.control.vidra"
                },
                {
                    "match": "\\b(project|scene|layer|component|layout_rules|override)\\b",
                    "name": "keyword.other.vidra"
                },
                {
                    "match": "\\b(String|Number|Duration|Color|Image|Video|Font|AssetId)\\b",
                    "name": "support.type.vidra"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "begin": "\"",
                    "end": "\"",
                    "name": "string.quoted.double.vidra",
                    "patterns": [
                        {
                            "match": "\\\\.",
                            "name": "constant.character.escape.vidra"
                        }
                    ]
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "match": "\\b\\d+(\\.\\d+)?\\b",
                    "name": "constant.numeric.vidra"
                }
            ]
        },
        "durations": {
            "patterns": [
                {
                    "match": "\\b\\d+(\\.\\d+)?(s|ms|f)\\b",
                    "name": "constant.numeric.duration.vidra"
                }
            ]
        },
        "colors": {
            "patterns": [
                {
                    "match": "#[0-9a-fA-F]{6,8}\\b",
                    "name": "constant.color.vidra"
                }
            ]
        },
        "properties": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*):",
                    "captures": {
                        "1": {
                            "name": "variable.parameter.vidra"
                        }
                    }
                },
                {
                    "match": "\\b(opacity|position|rotation|scale|anchor|blend_mode|color)\\b",
                    "name": "variable.other.property.vidra"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
                    "captures": {
                        "1": {
                            "name": "entity.name.function.vidra"
                        }
                    }
                }
            ]
        }
    }
}