project(1920, 1080, 30) {
    asset(image, "dice", "img/dice.png")

    scene("main", 5s) {
        layer("bg") {
            solid(#FFFFFF)
        }

        layer("logo_anim") {
            image("dice")
            position(960, 540)
            
            // Starts tiny, scales up to 1.5x native size
            animation(scaleX, from: 0.1, to: 1.5, duration: 2s, ease: easeOut)
            // Bounce it slightly over time
            animation(scaleY, from: 0.1, to: 1.5, duration: 2s, ease: easeOut)
            
            // Fade in
            animation(opacity, from: 0, to: 1, duration: 2s)
        }
    }
}
