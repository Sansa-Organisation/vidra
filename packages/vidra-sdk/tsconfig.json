{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "nodenext",
        "target": "esnext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "skipLibCheck": true,
        "moduleDetection": "force"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "examples", "test.js"]
}
