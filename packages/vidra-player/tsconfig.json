{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["esnext", "dom"],
        "isolatedModules": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "wasm", "examples"]
}
