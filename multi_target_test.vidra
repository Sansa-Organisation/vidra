project(1920, 1080, 30) {
    layout rules {
        when aspect(16:9) {
            layer("bg") { solid(#FF0000) }
            layer("text") { position(0, 0) }
        }
        when aspect(9:16) {
            layer("bg") { solid(#0000FF) }
            layer("text") { position(50, 50) }
        }
    }

    scene("main", 1s) {
        layer("bg") { solid(#000000) }
        layer("text") { 
            text("Hello Vidra", font: "Inter", size: 60)
            position(100, 100) 
        }
    }
}
